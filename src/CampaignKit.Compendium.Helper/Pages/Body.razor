<RadzenRow>
    <RadzenColumn Size="2">
        <RadzenStack Gap="1rem">
            <RadzenCard Visible="@(SelectedCompendium != null)">
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Navigation</RadzenText>
                <Navigator LabelGroups="LabelGroups"
                           Sources="SelectedCompendium.SourceDataSets"
                           TemporaryLabels="TemporaryLabels"
                           SelectedLabelGroupChanged="OnSelectedLabelGroupChanged"
                           SelectedSourceChanged="OnSelectedSourceChanged" />
            </RadzenCard>
        </RadzenStack>
    </RadzenColumn>
    <RadzenColumn Size="10">
        <RadzenTabs SelectedIndex="SelectedIndex">
            <Tabs>

                <RadzenTabsItem Text="Compendium" Visible="SelectedCompendium !=null">
                    <Compendium SelectedCompendium="SelectedCompendium"
                                SelectedCompendiumChanged="OnSelectedCompendiumChanged" />
                </RadzenTabsItem>

                <RadzenTabsItem Text="Label" Visible="SelectedLabelGroup !=null">
                    <Label SelectedLabelGroup="SelectedLabelGroup"
                           Sources="SelectedCompendium.SourceDataSets"
                           SelectedLabelGroupChanged="OnSelectedLabelGroupChanged"></Label>
                </RadzenTabsItem>

                <RadzenTabsItem Text="Source" Visible="SelectedSource != null">
                    <Source SelectedSource="SelectedSource"
                            SelectedSourceChanged="OnSelectedSourceChanged" />
                </RadzenTabsItem>

                <RadzenTabsItem Text="Editor" Visible="SelectedSource != null">
                    <Editor SelectedSource="SelectedSource"
                        SelectedSourceChanged="OnSelectedSourceChanged"/>
                </RadzenTabsItem>

            </Tabs>
        </RadzenTabs>
    </RadzenColumn>
</RadzenRow>
