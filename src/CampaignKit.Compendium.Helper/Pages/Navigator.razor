@if (LabelGroups != null)
{
    <RadzenRow>
        <RadzenAutoComplete
            @bind-Value="SearchTerm"
            Data="AutoCompleteData"
            Placeholder="Search..."
            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
            FilterOperator="StringFilterOperator.Contains"
            Change="OnSearchChanged" />
    </RadzenRow>
    <RadzenRow>
            <RadzenPanelMenu>
                @foreach (var grouping in FilteredLabelGroups)
                {
                    <RadzenPanelMenuItem Text="@grouping.DisplayLabel" Icon="bookmark" Visible="grouping.SourceDataSets.Any()">
                        @foreach (var dataSet in grouping.SourceDataSets)
                        {
                            <RadzenPanelMenuItem Text="@dataSet.SourceDataSetName" Click="OnSelectedSourceChanged" />
                        }
                    </RadzenPanelMenuItem>
                }
        </RadzenPanelMenu>
    </RadzenRow>
}