@if (LabelGroups != null)
{
    <RadzenRow>
        <RadzenAutoComplete @bind-Value="SearchTerm" Data="AutoCompleteData" Placeholder="Search..." Change="OnSearchChanged" />
    </RadzenRow>
    <RadzenRow>
            <RadzenPanelMenu>
                @foreach (var grouping in FilteredLabelGroups)
                {
                    <RadzenPanelMenuItem Text="@grouping.LabelName" Icon="bookmark" ExpandedChanged="@((isExpanded) => OnLabelSelected(isExpanded, grouping))">
                        @foreach (var dataSet in grouping.SourceDataSets)
                        {
                            <RadzenPanelMenuItem Text="@dataSet.SourceDataSetName" Click="args => OnSourceSelected(args, grouping)" />
                        }
                    </RadzenPanelMenuItem>
                }
        </RadzenPanelMenu>
    </RadzenRow>
}