@if(Compendium != null)
{
    <RadzenRow>
        <RadzenAutoComplete @bind-Value="SearchTerm" Data="@AutoCompleteData" Placeholder="Search..." Change="@OnSearchChanged" />
    </RadzenRow>
    <RadzenRow>
            <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="@Compendium.Title" Expanded="true" Icon="book">
                @foreach (var grouping in Compendium.SourceDataSetGroupings)
                {
                    if (grouping.SourceDataSets != null && grouping.SourceDataSets.Count > 0)
                    {
                        <RadzenPanelMenuItem Text="@grouping.LabelName" Icon="bookmark">
                            @foreach (var dataSet in grouping.SourceDataSets)
                            {
                                <RadzenPanelMenuItem Text="@dataSet.SourceDataSetName" />
                            }
                        </RadzenPanelMenuItem>
                    }
                }
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenRow>
}