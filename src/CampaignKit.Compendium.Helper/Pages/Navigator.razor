@if (LabelGroups != null)
{
    <RadzenRow>
        <RadzenAutoComplete
            @bind-Value="SearchTerm"
            Data="AutoCompleteData"
            Placeholder="Search..."
            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
            FilterOperator="StringFilterOperator.Contains"
            Change="OnSearchChanged" />
    </RadzenRow>
    <RadzenRow>
            <RadzenPanelMenu>
                @foreach (var grouping in LabelGroups)
                {
                    <RadzenPanelMenuItem Text="@grouping.DisplayLabel" Icon="bookmark" ExpandedChanged="@((isExpanded) => OnSelectedLabelGroupChanged(grouping))">
                        @foreach (var dataSet in grouping.SourceDataSets)
                        {
                            <RadzenPanelMenuItem Text="@dataSet.SourceDataSetName" Click="args => OnSelectedSourceChanged(args, grouping)" />
                        }
                    </RadzenPanelMenuItem>
                }
        </RadzenPanelMenu>
    </RadzenRow>
}