<style>
    .CodeMirror {
        height: 700px;
    }
</style>

<RadzenCard class="rz-card">

    <RadzenRow Gap="1rem">
        <RadzenText class="rz-text-subtitle2" TagName="TagName.H3">Content Editor</RadzenText>
        <RadzenButton Text="Customize Content" ButtonStyle="ButtonStyle.Light" Visible="!HasCustomizedContent"/>
        <RadzenButton Text="Restore Default" ButtonStyle="ButtonStyle.Light" Visible="HasCustomizedContent"/>
    </RadzenRow>

    
    <RadzenRow Gap="1rem">
        <RadzenColumn Size="12">
            <RadzenTextArea 
                id="markdownEditor" 
                class="form-control" 
                style="flex-grow: 1; overflow: auto; box-sizing: border-box;">
            </RadzenTextArea>
        </RadzenColumn>    
    </RadzenRow>

</RadzenCard>