@if (Compendium != null)
{
    <RadzenCard class="rz-card">
        <RadzenRow Gap="1rem">
            <RadzenText class="rz-text-subtitle2" TagName="TagName.H3">Compendium Properties</RadzenText>
        </RadzenRow>

        <RadzenRow Gap="1rem">
            <RadzenColumn Size="12">
                <RadzenStack>

                    <RadzenStack Orientation="Orientation.Horizontal">
                        <RadzenFormField Text="@labels["title"]" Variant="@variant" Style="width: 100%">
                            <RadzenTextBox @bind-Value="@Compendium.Title" id="title" />
                        </RadzenFormField>
                        <RadzenIcon Icon="help"
                                    MouseEnter="@(args => ShowTooltip(args, tooltips["title"]))" />
                    </RadzenStack>



                    <RadzenStack Orientation="Orientation.Horizontal">
                        <RadzenFormField Text="@labels["description"]" Variant="@variant" Style="width: 100%">
                            <RadzenTextArea @bind-Value="@Compendium.Description" id="description" />

                        </RadzenFormField>
                        <RadzenIcon Icon="help"
                                    MouseEnter="@(args => ShowTooltip(args, tooltips["description"]))" />
                    </RadzenStack>

                    <RadzenStack Orientation="Orientation.Horizontal">
                        <RadzenFormField Text="@labels["gameSystem"]" Variant="@variant" Style="width: 100%">
                            <RadzenTextBox @bind-Value="@Compendium.GameSystem" id="gameSystem" />
                        </RadzenFormField>
                        <RadzenIcon Icon="help"
                                    MouseEnter="@(args => ShowTooltip(args, tooltips["gameSystem"]))" />
                    </RadzenStack>

                    <RadzenStack Orientation="Orientation.Horizontal">
                        <RadzenFormField Text="@labels["compendiumService"]" Variant="@variant" Style="width: 100%">
                            <RadzenTextBox @bind-Value="@Compendium.CompendiumService"
                                           id="compendiumService"
                                           ReadOnly="true" />
                        </RadzenFormField>
                        <RadzenIcon Icon="help"
                                    MouseEnter="@(args => ShowTooltip(args, tooltips["compendiumService"]))" />
                    </RadzenStack>

                    <RadzenStack Orientation="Orientation.Horizontal">
                        <RadzenFormField Text="@labels["imageUrl"]" Variant="@variant" Style="width: 100%">
                            <RadzenTextBox @bind-Value="@Compendium.ImageUrl" id="imageUrl" />
                        </RadzenFormField>
                        <RadzenIcon Icon="help"
                                    MouseEnter="@(args => ShowTooltip(args, tooltips["imageUrl"]))" />
                    </RadzenStack>

                    <RadzenStack Orientation="Orientation.Horizontal">
                        <RadzenFormField Text="@labels["isActive"]" Variant="@variant" Style="width: 150px">
                            <RadzenCheckBox @bind-Value="@Compendium.IsActive" id="isActive" class="m-3" Style="flex: none;" />
                        </RadzenFormField>
                        <RadzenIcon Icon="help"
                                    MouseEnter="@(args => ShowTooltip(args,  tooltips["isActive"]))" />
                        <RadzenFormField Text="@labels["overwriteExisting"]" Variant="@variant" Style="width: 150px">
                            <RadzenCheckBox @bind-Value="@Compendium.OverwriteExisting" id="overwriteExisting" class="m-3" Style="flex: none;" />
                        </RadzenFormField>
                        <RadzenIcon Icon="help"
                                    MouseEnter="@(args => ShowTooltip(args,  tooltips["overwriteExisting"]))" />
                    </RadzenStack>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenCard>
}

@code {
    /// <summary>
    /// Sets the variant of the object to Outlined.
    /// </summary>
    private Variant variant = Variant.Outlined;

    /// <summary>
    /// Dictionary containing labels for form fields.
    /// </summary>
    private Dictionary<string, string> labels = new Dictionary<string, string>
    {
        {"title", "Title"},
        {"description", "Description"},
        {"gameSystem", "Game System"},
        {"compendiumService", "Compendium Service."},
        {"imageUrl", "Image URL."},
        {"isActive", "Is Active?"},
        {"overwriteExisting", "Overwrite Existing?"}
    };

    /// <summary>
    /// Dictionary containing tooltips for form fields.
    /// </summary>
    private Dictionary<string, string> tooltips = new Dictionary<string, string>
    {
        {"title", "Provide a title for the compendium."},
        {"description", "Provide a brief description of this compendium."},
        {"gameSystem", "Which game system does this compendium belong to?"},
        {"compendiumService", "Provide the name of the compendium service processing here."},
        {"imageUrl", "Provide a URL to an image for this compendium."},
        {"isActive", "Should the compendium generator consider this configuration active during processing?"},
        {"overwriteExisting", "Should files downloaded during a previous compendium generation run be overwritten?"}
    };
}
