@page "/helper"
<style>

    .rz-fileupload-buttonbar {
        padding: 0px;
    }

    .rz-fileupload-buttonbar > .rz-fileupload-choose {
        font-size: 0.875rem;
    }

    .rz-fileupload .rz-button .rz-button-text {
        line-height: 1.5rem;
    }

</style>
<PageTitle>Helper</PageTitle>
<RadzenRow>
    <RadzenColumn>
        <RadzenCard>
            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Configuration</RadzenText>
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
                <RadzenButton Text="Create New"
                              ButtonStyle="ButtonStyle.Light" />
                <RadzenText Text="- or -" />
                <RadzenUpload Accept=".json"
                              Url="upload/single"
                              Complete="@UploadComplete"
                              ChooseText="Upload Existing"
                              Multiple=false />
            </RadzenStack>
            
        </RadzenCard>
        <RadzenCard Style="margin-top:10px;">
            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Navigation</RadzenText>
            <RadzenTree Data="@PublicCompendiums">
                <RadzenTreeLevel TextProperty="Title" ChildrenProperty="SourceDataSetGroupings" />
                <RadzenTreeLevel TextProperty="LabelName" HasChildren="@((LabelName) => false)" />
            </RadzenTree>
        </RadzenCard>
    </RadzenColumn>
    <RadzenColumn>
    </RadzenColumn>
    <RadzenColumn>
    </RadzenColumn>
</RadzenRow>
