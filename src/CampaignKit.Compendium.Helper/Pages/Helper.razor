@page "/helper"
<style>

    .rz-fileupload-buttonbar {
        padding: 0px;
    }

        .rz-fileupload-buttonbar > .rz-fileupload-choose {
            font-size: 0.875rem;
        }

    .rz-fileupload .rz-button .rz-button-text {
        line-height: 1.5rem;
    }

</style>
<PageTitle>Helper</PageTitle>
<RadzenRow>
    <RadzenColumn Size="4">
        <RadzenStack Gap="1rem">
            <RadzenCard>
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Configuration</RadzenText>
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
                    <RadzenButton Text="New"
                                  ButtonStyle="ButtonStyle.Light" />
                    <RadzenText Text="- or -" />
                    <RadzenUpload Accept=".json"
                                  Url="upload/single"
                                  Complete="@UploadComplete"
                                  ChooseText="Upload"
                                  Multiple=false />
                </RadzenStack>

            </RadzenCard>
            <RadzenCard>
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Navigation</RadzenText>
                <Navigator Compendium="@Compendium" />
            </RadzenCard>
        </RadzenStack>
    </RadzenColumn>
    <RadzenColumn Size="8">
        <RadzenTabs>
            <Tabs>
                <RadzenTabsItem Text="Compendium">
                    <CompendiumProperties Compendium="@Compendium" />
                </RadzenTabsItem>
                <RadzenTabsItem Text="Data Source">
                    <!-- Content for Source tab -->
                    <RadzenCard>
                        <RadzenText>Data Source</RadzenText>
                    </RadzenCard>
                </RadzenTabsItem>
                <RadzenTabsItem Text="Preview">
                    <!-- Content for Preview tab -->
                    <RadzenCard>
                        <RadzenText>Preview</RadzenText>
                    </RadzenCard>
                </RadzenTabsItem>
            </Tabs>
        </RadzenTabs>
    </RadzenColumn>
</RadzenRow>
