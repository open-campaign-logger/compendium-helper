@page "/helper"
<style>

    .rz-fileupload-buttonbar {
        padding: 0px;
    }

        .rz-fileupload-buttonbar > .rz-fileupload-choose {
            font-size: 0.875rem;
        }

    .rz-fileupload .rz-button .rz-button-text {
        line-height: 1.5rem;
    }

</style>
<PageTitle>Helper</PageTitle>
<RadzenRow>
    <RadzenColumn Size="4">
        <RadzenStack Gap="1rem">
            <RadzenCard>
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Configuration</RadzenText>
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
                    <RadzenButton Text="New"
                                  ButtonStyle="ButtonStyle.Light" />
                    <RadzenText Text="- or -" />
                    <RadzenUpload Accept=".json"
                                  Url="upload/single"
                                  Complete="UploadComplete"
                                  ChooseText="Upload"
                                  Multiple=false />
                </RadzenStack>

            </RadzenCard>
            <RadzenCard>
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Navigation</RadzenText>
                <Navigator Compendium="SelectedCompendium"
                           CompendiumExpanded="OnCompendiumExpanded"
                           CompendiumCollapsed="OnCompendiumCollapsed"
                           LabelExpanded="OnLabelExpanded"
                           LabelCollapsed="OnLabelCollapsed"
                           SourceDataSetSelected="OnSourceDataSetSelected" />
            </RadzenCard>
        </RadzenStack>
    </RadzenColumn>
    <RadzenColumn Size="8">
        <RadzenTabs>
            <Tabs>
                @if (SelectedSourceDataSet != null)
                {
                    <RadzenTabsItem Text="Source Data Set">
                        <SourceDataSetProperties DataSet="SelectedSourceDataSet" />
                    </RadzenTabsItem>
                }
                else if (SelectedSourceDataSetGrouping != null)
                {
                    <RadzenTabsItem Text="Label">
                        <LabelProperties SourceDataSetGrouping="SelectedSourceDataSetGrouping" 
                            AllSourceDataSets="SelectedCompendium.SourceDataSets"
                            LabelAssignmentChange="OnLabelAssignmentChanted"/>
                    </RadzenTabsItem>
                }
                else if (SelectedCompendium != null)
                {
                    <RadzenTabsItem Text="Compendium">
                        <CompendiumProperties Compendium="SelectedCompendium" />
                    </RadzenTabsItem>
                }
            </Tabs>
        </RadzenTabs>
    </RadzenColumn>
</RadzenRow>
