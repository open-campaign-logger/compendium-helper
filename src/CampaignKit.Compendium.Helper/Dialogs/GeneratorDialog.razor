<style>
    .noWrapTextArea {
        white-space: nowrap;
        overflow-x: auto;
    }
</style>

<RadzenStack>
    <RadzenTextArea Class="noWrapTextArea" Cols="60" Rows="20" Value="@Status" ></RadzenTextArea>
    <RadzenProgressBar Value="@Progress" Style="width: 100%"></RadzenProgressBar>

    <RadzenButton ButtonStyle="ButtonStyle.Primary" Text="Generate" Click="@OnGenerate"></RadzenButton>
    <RadzenButton ButtonStyle="ButtonStyle.Secondary" Text="Cancel" Click="@OnCancel"></RadzenButton>
</RadzenStack>