<RadzenStack>
    <RadzenStack Orientation="Orientation.Horizontal">
        <RadzenFormField Text="@_labels["labels"]" Variant="@_variant" Style="width: 100%">
            <End>
                <RadzenIcon Icon="help" MouseEnter="@(args => ShowTooltip(args, _tooltips["labels"]))" />
            </End>
            <ChildContent>
                <RadzenTextArea @bind-Value="Labels" />
            </ChildContent>
        </RadzenFormField>
    </RadzenStack>
    <RadzenStack>
        <RadzenButton ButtonStyle="ButtonStyle.Primary" Text="Add" Click="OnAdd" Disabled="!IsValid"></RadzenButton>
    </RadzenStack>
</RadzenStack>

@code {
    /// <summary>
    /// Sets the variant of the object to Outlined.
    /// </summary>
    private Variant _variant = Variant.Outlined;

    /// <summary>
    /// Dictionary containing tooltips for form fields.
    /// </summary>
    Dictionary<string, string> _tooltips = new()
    {
        {"labels", "A comma separated list of labels to add."},
    };

    /// <summary>
    /// Dictionary containing labels for form fields.
    /// </summary>
    Dictionary<string, string> _labels = new()
    {
        {"labels", "Labels"},
    };
}
